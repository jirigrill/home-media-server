PGID=1000

# Timezone
TZ=Etc/UTC

# Service ports
QBITTORRENT_UI_PORT=8080
QBITTORRENT_TORRENT_PORT=6881
JELLYFIN_PORT=8096
PROWLARR_PORT=9696
SONARR_PORT=8989
RADARR_PORT=7878
