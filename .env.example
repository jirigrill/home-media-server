# Memory limits (set appropriate values based on your system resources)
QBITTORRENT_MEM_LIMIT=512m
PROWLARR_MEM_LIMIT=256m
SONARR_MEM_LIMIT=512m
RADARR_MEM_LIMIT=512m
BAZARR_MEM_LIMIT=512m
CLEANUPARR_MEM_LIMIT=256m
DELETERR_MEM_LIMIT=128m
HUNTARR_MEM_LIMIT=256m
POSTGRES_MEM_LIMIT=256m
BITMAGNET_MEM_LIMIT=512m

# Path configurations (adjust to your actual paths)
DOWNLOADS_PATH=/path/to/downloads
SHOWS_PATH=/path/to/media/shows
MOVIES_PATH=/path/to/media/movies

# User/Group configuration (use your actual user/group IDs)
PUID=1000
PGID=1000

# Timezone
TZ=Etc/UTC

# Service ports
QBITTORRENT_UI_PORT=8080
QBITTORRENT_TORRENT_PORT=6881
JELLYFIN_PORT=8096
PROWLARR_PORT=9696
SONARR_PORT=8989
RADARR_PORT=7878
BAZARR_PORT=6767
CLEANUPARR_PORT=11011
DELETERR_PORT=5000
HUNTARR_PORT=9705

# Bitmagnet configuration
BITMAGNET_PORT=3333
BITMAGNET_DHT_PORT=3334
DHT_CRAWLER_SCALING_FACTOR=3
TMDB_API_KEY=your_tmdb_api_key_here

# PostgreSQL configuration (for Bitmagnet)
POSTGRES_USER=bitmagnet
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=bitmagnet

# API Keys (generate these from the respective services)
SONARR_API_KEY=your_sonarr_api_key_here
RADARR_API_KEY=your_radarr_api_key_here

# File permissions
UMASK=022

# Hardware acceleration (adjust for your GPU)
RENDER_GROUP=109
RENDER_DEVICE=/dev/dri/renderD128